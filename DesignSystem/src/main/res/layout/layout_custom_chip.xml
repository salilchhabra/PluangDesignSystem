<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rect_gray_stroke_blue_32_solid_body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_left"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="@dimen/size_24dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_4dp"
            android:text="Chip"
            android:textSize="@dimen/text_14"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_right"
            app:layout_constraintStart_toEndOf="@+id/iv_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/size_16dp"
            app:layout_goneMarginStart="@dimen/size_16dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_right"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_4dp"
            android:layout_marginEnd="@dimen/size_12dp"
            android:visibility="visible"
            android:maxHeight="@dimen/size_24dp"
            android:maxWidth="@dimen/size_24dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/size_12dp"
            app:srcCompat="@drawable/ic_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>