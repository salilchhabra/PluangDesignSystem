<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rect_blue006f_corners4dp_solid_body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/size_16dp"
            android:layout_height="@dimen/size_16dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_6dp"
            android:visibility="gone"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_one"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_4dp"
            android:text="Chip"
            android:textSize="@dimen/text_12"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_middle"
            app:layout_constraintStart_toEndOf="@+id/iv_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/size_8dp"
            app:layout_goneMarginStart="@dimen/size_8dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_middle"
            android:layout_width="@dimen/size_16dp"
            android:layout_height="@dimen/size_16dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_2dp"
            android:layout_marginEnd="@dimen/size_2dp"
            android:visibility="visible"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_name_two"
            app:layout_constraintStart_toEndOf="@+id/tv_name_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/size_6dp"
            app:layout_goneMarginStart="@dimen/size_6dp"
            app:srcCompat="@drawable/ic_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_two"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chip"
            android:textSize="@dimen/text_12"
            android:visibility="visible"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_right"
            app:layout_constraintStart_toEndOf="@+id/iv_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/size_8dp"
            app:layout_goneMarginStart="@dimen/size_8dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/size_16dp"
            android:layout_height="@dimen/size_16dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_4dp"
            android:layout_marginEnd="@dimen/size_6dp"
            android:visibility="gone"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_name_two"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>