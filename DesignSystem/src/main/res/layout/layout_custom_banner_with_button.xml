<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_2dp"
    android:background="@drawable/background_rect_bluee6_corners12_solid_body">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_banner"
        android:layout_width="@dimen/size_24dp"
        android:layout_height="@dimen/size_24dp"
        android:layout_marginStart="@dimen/size_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@drawable/ic_info" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        style="@style/TextViewFoundersGroteskProMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_12dp"
        android:lineSpacingExtra="@dimen/size_6dp"
        app:layout_goneMarginEnd="@dimen/size_44dp"
        tool:text="How is my portfolio calculated"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toStartOf="@+id/iv_banner_right"
        app:layout_constraintStart_toEndOf="@+id/iv_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="@dimen/size_16dp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        style="@style/TextViewFoundersGroteskProRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:lineSpacingExtra="@dimen/size_6dp"
        app:layout_goneMarginEnd="@dimen/size_44dp"
        tool:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit identity."
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toStartOf="@+id/iv_banner_right"
        app:layout_constraintStart_toEndOf="@+id/iv_banner"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_goneMarginStart="@dimen/size_16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_dismiss"
        style="@style/TextViewFoundersGroteskProRegular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_12dp"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/text_14"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        android:text="@string/dismiss" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cross"
        android:layout_width="@dimen/size_20dp"
        android:layout_height="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross_black_24" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_banner_right"
        android:layout_width="@dimen/size_24dp"
        android:layout_height="@dimen/size_24dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/size_24dp"
        android:layout_height="@dimen/size_24dp"
        android:visibility="visible"
        android:layout_marginEnd="@dimen/size_16dp"
        android:background="?actionBarItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_chevron_right" />

</androidx.constraintlayout.widget.ConstraintLayout>