<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_tab_with_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_16"
            style="@style/TextViewFoundersGroteskProRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_label"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Tab" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_label"
            style="@style/TextViewFoundersGroteskProRegular"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginStart="@dimen/size_4dp"
            android:background="@drawable/background_rect_blue006f_corners4dp_solid_body"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_tab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_tab"
            app:layout_constraintTop_toTopOf="@+id/tv_tab"
            tools:text="Label" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>